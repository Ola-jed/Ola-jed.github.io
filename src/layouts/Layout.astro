---
export interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Astro description">
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
    <script>
        const originalBG = "#000000";

        const showHighlightEffect = function (element) {
            const x = element.pageX - this.offsetLeft;
            const y = element.pageY - this.offsetTop;
            const xy = `${x} ${y}`;
            const from = "#aa9ab6";
            const to = "#000000";
            this.style.background = `-webkit-gradient(radial, ${xy}, 0, ${xy}, 50, from(${from}), to(${to})), ${originalBG}`;
        };

        const removeHighlightEffect = function () {
            this.style.background = originalBG;
        };

        document.querySelectorAll(".project-container, .card").forEach(function (element) {
            element.addEventListener("mousemove", showHighlightEffect);
            element.addEventListener("mouseleave", removeHighlightEffect);
        });

        const scrollUp = document.getElementById("scrollUp");
        window.addEventListener("scroll", () => {
            if (window.scrollY > 200) {
                scrollUp?.querySelector(".scroll-up")?.classList.add("visible");
            } else {
                scrollUp?.querySelector(".scroll-up")?.classList.remove("visible");
            }
        });
    </script>
</head>
<body>
<slot/>
</body>
</html>

<style is:global>
    :root {
        --font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        --normal-font: 400;
        --bold-font: 600;
        --bolder-font: 700;

        --bg-color: #2c2c36;
        --bg-color-alt: #202028;

        --primary-color: #bcc4f3;
        --secondary-color: #88d284;

        --primary-shadow: rgba(255, 255, 255, 0.08);
        --secondary-shadow: rgba(136, 210, 132, 0.4);

        --line-height: 1.7rem;
        --transition: 0.3s ease;
        --border-radius: 1rem;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
        background-color: var(--bg-color);
        color: #ffffff;
    }

    body {
        font-family: var(--font-family);
        line-height: var(--line-height);
    }

    ul {
        list-style: none;
    }

    a {
        text-decoration: none;
        color: var(--primary-color);
        transition: color var(--transition);
    }

    a:hover {
        color: var(--secondary-color);
    }

    nav {
        position: sticky;
        top: 0;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 2rem;
        background-color: var(--bg-color);
    }

    nav h1 {
        color: var(--primary-color);
        font-weight: var(--bolder-font);
    }

    nav ul {
        display: flex;
        gap: 2rem;
    }

    nav ul li {
        font-weight: var(--bold-font);
    }

    nav a {
        position: relative;
        padding-bottom: 4px;
    }

    nav a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        width: 0;
        height: 2px;
        background-color: var(--secondary-color);
        transition: width var(--transition);
    }

    nav a:hover::after {
        width: 100%;
    }

    #about {
        max-width: 30rem;
        margin: 3rem auto;
        padding: 1.5rem;
        background-color: #000;
        border-radius: var(--border-radius);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
    }

    .bio-title {
        text-align: center;
        margin-bottom: 1rem;
        font-weight: var(--bolder-font);
    }

    .bio-text {
        text-align: center;
    }

    .skill-wrapper {
        display: flex;
        flex-direction: column;
    }

    .skill-container {
        background-color: #000;
        padding: 1.5rem;
        border-radius: var(--border-radius);
        border: 1px solid var(--primary-shadow);
        text-align: center;
        transition: transform var(--transition),
        box-shadow var(--transition),
        border-color var(--transition);
    }

    .skill-container:hover {
        transform: translateY(-6px);
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.45);
        border-color: var(--secondary-color);
    }

    .skill-icon {
        width: 4.5rem;
        height: 4.5rem;
        object-fit: contain;
        margin-bottom: 0.75rem;
    }

    .skill-name {
        font-size: 0.95rem;
        font-weight: var(--bold-font);
        color: var(--primary-color);
    }

    .skills {
        max-width: 70rem;
        margin: 4rem auto;
        text-align: center;
    }

    .skill-header {
        margin-bottom: 2.5rem;
    }

    .skills-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1.75rem;
        max-width: 72rem;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .icon {
        width: 11rem;
        height: 11rem;
    }

    .projects-container, .contacts-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.75rem;
        max-width: 72rem;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .project-container, .contact-container-card {
        background-color: #000;
        padding: 1.5rem;
        border-radius: var(--border-radius);
        text-align: center;
        border: 1px solid var(--primary-shadow);
        transition: transform var(--transition),
        box-shadow var(--transition),
        border-color var(--transition);
    }

    .project-container:hover, .contact-container-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.45);
        border-color: var(--secondary-color);
    }

    .project-container p {
        margin-top: 0.5rem;
    }

    .education-container {
        background-color: #000;
        padding: 1.5rem;
        border-radius: var(--border-radius);
        border: 1px solid var(--primary-shadow);
        text-align: left;
        transition:
                transform var(--transition),
                box-shadow var(--transition),
                border-color var(--transition);
    }

    .education-container:hover {
        transform: translateY(-6px);
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.45);
        border-color: var(--secondary-color);
    }

    .education-title {
        font-size: 1.05rem;
        font-weight: var(--bolder-font);
        margin-bottom: 0.5rem;
        color: #ffffff;
    }

    .education-school {
        font-size: 0.95rem;
        font-weight: var(--bold-font);
        margin-bottom: 0.25rem;
    }

    .education-school a {
        color: var(--primary-color);
    }

    .education-school a:hover {
        color: var(--secondary-color);
    }

    .education-period {
        font-size: 0.85rem;
        opacity: 0.75;
    }

    h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: var(--bolder-font);
        margin: 4rem 0 3rem;
        position: relative;
    }

    .contact {
        padding: 4rem 1rem;
        background: linear-gradient(
                180deg,
                var(--bg-color) 0%,
                var(--bg-color-alt) 100%
        );
    }

    footer {
        background-color: var(--bg-color-alt);
        text-align: center;
        padding: 4rem 1rem 2rem;
    }

    .scroll-up {
        position: fixed;
        right: 2%;
        bottom: 3%;
        cursor: pointer;
        opacity: 0;
        pointer-events: none;
        transition: opacity var(--transition);
    }

    .scroll-up.visible {
        opacity: 1;
        pointer-events: auto;
    }

    .up-arrow {
        width: 3rem;
        height: 3rem;
    }
</style>

